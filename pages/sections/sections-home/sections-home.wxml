<!--pages/sections/sections-home/sections-home.wxml-->

<view wx:if="{{!havelogin}}" class="hover-login" capture-catch:tap="callLogin"></view>

<!--板块界面-->
<view class="forum">
    <view class="item {{(index+1) % 3 == 0 ? 'last' : ''}}" wx:for="{{forum_list}}"
     data-name="{{item.title}}" data-has-org="{{item.hasOrgLevel}}" data-forumid="{{index}}" wx:key="id" bindtap="handleClick">
        <image class="icon" src="{{item.picUrl}}"></image>
        <text class="text">{{item.title}}</text>
    </view>
</view>


