.swiper-tab{
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
  border-bottom: 1px solid #000;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.tab-item{
  flex: 1;
  font-size: 30rpx;  
  display: inline-block;   
  color: #777777;
}
.on{
  color: red;  
  border-bottom: 5rpx solid red;
}

/*forum style*/


.forum {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* flex-wrap:wrap;
  margin-bottom: 20rpx; */
}

.forum .item {
  height: 200rpx;
  width: 210rpx;
  margin-right: 47rpx;
  margin-top: 15rpx;
}

.forum .last {
  margin-right: 0rpx;
}

.forum .item .icon {
  display: block;
  height: 149rpx;
  width: 187rpx;
  border-radius: 25px;
  /*border-color单独使用是不起作用的，必须得先使用border-style来设置边框样式。*/
  border-style: solid; 
  border-width: 1rpx;
  border-color: grey;

}


.forum .item .text {
  display: block;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  height: 40rpx;
  width: 187rpx;
  overflow:hidden;
}

