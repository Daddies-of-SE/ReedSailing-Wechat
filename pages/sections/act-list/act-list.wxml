<!--pages/sections/act-list/act-list.wxml-->

<!--组织名称-->
<view class="org-header">
    <text class="text">{{orgName}}</text>
    <image class="picture" src="{{orgPicUrl}}"></image>
    <block wx:if="{{isRealOrg && !hasFollowed}}">
      <button class='followBtn' bindtap='followOrg'>关注</button>
    </block>
    <block wx:elif="{{isRealOrg && hasFollowed}}">
      <button class='followBtn' bindtap='unFollowOrg'>取消关注</button>
    </block>
</view>

<!--信息、管理员、活动-->
<view class='folder'>

  <block wx:if="{{isRealOrg}}">
  <view class='folder_item'>
    <view class='title' data-index='0' catchtap='panel'>
      <view class='title_1'>信息</view>
      <view class='title_2'><image src="/icon/{{showIndex[0]? 'up':'down'}}.png"></image></view>
    </view>
    <block wx:if="{{showIndex[0]}}">
      <view class='detail'>所属板块：{{orgInfo.belong_forum.name}}</view>
      <view class='detail'>创建时间：{{orgInfo.create_time}}</view>
      <view class='detail'>负责人：{{orgInfo.owner.name}}</view>
      <view class='detail'>介绍：{{orgInfo.description}}</view>
    </block>
    
    <button class='editBtn' bindtap='editOrgInfo' wx:if="{{isManager && showIndex[0]}}">编辑</button>
  </view>
  </block>

  <block wx:if="{{isRealOrg}}">
  <view class='folder_item'>
    <view class='title' data-index='1' catchtap='panel'>
      <view class='title_1'>管理员</view>
      <view class='title_2'><image src="/icon/{{showIndex[1]? 'up':'down'}}.png"></image></view>
    </view>
    <view class='memList' wx:if="{{showIndex[1]}}">
      <i-cell-group i-class="mem-wrap">
        <block wx:for="{{memList}}" wx:key="id">
          <image class="headShot" src="{{item.HeadShotUrl}}"></image>
          <view wx:if="isManager">
            <button class='editBtn' bindtap='editMemList'>编辑</button>
          </view>
        </block>
      </i-cell-group>
    </view>
    <view class='detail' wx:if="{{showIndex[1]}}">管理员跑路了</view>
    <button class='editBtn' bindtap='editMemList' wx:if="{{isManager && showIndex[1]}}">编辑</button>
  </view>
  </block>

  <view class='folder_item'>
    <view class='title' data-index='2' catchtap='panel'>
      <view class='title_1'>未开始活动</view>
      <view class='title_2'><image src="/icon/{{showIndex[2]? 'up':'down'}}.png"></image></view>
    </view>
    <view class='actList'  wx:if="{{showIndex[2]}}">
      <i-cell-group i-class="act-wrap">
        <button class='editBtn' bindtap='goNewAct' wx:if="{{isManager && orgId != -1}}">新建</button>
        <block wx:for="{{unstartActList}}" wx:key="id">
            <i-cell title="{{item.name}}" label="{{item.description}}" is-link bindtap="goAct" 
                data-actid="{{item.id}}" data-actname="{{item.name}}">
            </i-cell> 
        </block>
      </i-cell-group>
    </view>
    
  </view>

  <view class='folder_item'>
    <view class='title' data-index='3' catchtap='panel'>
      <view class='title_1'>进行中活动</view>
      <view class='title_2'><image src="/icon/{{showIndex[3]? 'up':'down'}}.png"></image></view>
    </view>
    <view class='actList'  wx:if="{{showIndex[3]}}">
      <i-cell-group i-class="act-wrap">
        <block wx:for="{{curActList}}" wx:key="id">
            <i-cell title="{{item.name}}" label="{{item.description}}" is-link bindtap="goAct" 
                data-actid="{{item.id}}" data-actname="{{item.name}}">
            </i-cell> 
        </block>
      </i-cell-group>
    </view>
  </view>

  <view class='folder_item'>
    <view class='title' data-index='4' catchtap='panel'>
      <view class='title_1'>已结束活动</view>
      <view class='title_2'><image src="/icon/{{showIndex[4]? 'up':'down'}}.png"></image></view>
    </view>
    <view class='actList'  wx:if="{showIndex[4]}}">
      <i-cell-group i-class="act-wrap">
        <block wx:for="{{endActList}}" wx:key="id">
            <i-cell title="{{item.name}}" label="{{item.description}}" is-link bindtap="goAct" 
                data-actid="{{item.id}}" data-actname="{{item.name}}">
            </i-cell> 
        </block>
      </i-cell-group>
    </view>
  </view>
</view>
