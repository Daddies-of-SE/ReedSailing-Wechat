  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 30rpx;
}

.org-header .picture {
  height: 90rpx;
  width: 90rpx;
}


.mem-wrap .mem-avator {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}

/*滑动栏*/
.mem-item {
  height: 90rpx;

}

.i-swipeout-demo-item{
  border-bottom:#333 solid 1px;
}
.i-cell-padding{
  padding:5px 0px!important;
  font-size:14px;
}
.i-swipeout-demo-title{
  height:30px;
  padding:0 15px;
  line-height:30px;
  margin-top:20px;
  margin-bottom:5px;
}
.i-swipeout-demo-des{
  padding:0 15px;
